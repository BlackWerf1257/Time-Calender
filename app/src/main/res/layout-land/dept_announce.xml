<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background_Color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mainBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="홈 화면"
            android:textStyle="bold"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:background="@color/Selected_Button"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/calender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시간표"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            android:textColor="@color/black"
            android:background="@color/UnSelected_Button"/>

        <Button
            android:id="@+id/schedule"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="일정"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            android:textColor="@color/black"
            android:background="@color/UnSelected_Button"/>

        <Button
            android:id="@+id/studyManage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/UnSelected_Button"
            android:text="공부관리"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="0dp" />
    </LinearLayout>
    <!-- 상단 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:background="#C5E2EF"
        android:orientation="vertical">
        <TextView
            android:id="@+id/todayDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:textSize="35sp"
            android:textAlignment="center"
            android:text="OOOO-OO-OO\n(X요일)" />

        <TextView
            android:id="@+id/userNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="이름"
            android:textColor="@color/black"
            android:layout_marginTop="30sp"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/userDeptNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:textSize="35sp"
            android:text="학과" />
        </LinearLayout>
        <!-- 유저 정보 -->
        <!-- 사이트 이동 메뉴 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="vertical">

            <Button
                android:id="@+id/moveToSchoolSite"
                android:layout_width="350sp"
                android:layout_height="50sp"
                android:layout_marginTop="10sp"
                android:text="학교 홈페이지로 이동하기"
                android:background="@drawable/button_layout"
                android:textColor="@color/Button_Text_Color"
                android:textSize="30sp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/moveToDeptSite"
                android:layout_width="350sp"
                android:layout_height="50sp"
                android:layout_marginTop="50sp"
                android:textColor="@color/Button_Text_Color"
                android:text="학과 사이트로 이동하기"
                android:background="@drawable/button_layout"
                android:textSize="30sp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/moveToCybercampus"
                android:layout_width="350sp"
                android:layout_height="50sp"
                android:layout_marginTop="50sp"
                android:textColor="@color/Button_Text_Color"
                android:background="@drawable/button_layout"
                android:text="사이버캠퍼스로 이동하기"
                android:textSize="30sp"
                android:layout_gravity="center"/>

        </LinearLayout>

   </LinearLayout>
</LinearLayout>